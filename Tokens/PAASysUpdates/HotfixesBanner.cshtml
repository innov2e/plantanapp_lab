@inherits avt.MyTokens.Core.ParsingEngine.RazorTemplate
<style>

    #PAAupdatesBanner {
        background: #009688;
        color: white;
        width: 100%;
        height: 60px;
        text-align: center;
        font-size: 15px;
        overflow-x: auto;
        top: 0px;
        position: absolute;
        margin-left: -8px;
    }

    #PAAupdatesBannerContent {
        margin-top: 15px;
    }

    #PAAupdatesBannerButtons {
        margin-left: 10px;
    }
    
    #PAAupdatesBannerCloseButton {
        float: right;
        margin-right: 10px;
    }
    
    #close-banner {
        cursor: pointer;
    }
    
</style>

<script>
    function hide(element) {
        element.style.display = 'none';
    }
    
    function show(element) {
        element.style.display = 'inline-block';
    }
    
    hide(window.parent.document.getElementsByClassName('returnto-old-ui')[0]);
    

</script>
    
<div id="PAAupdatesBanner">
    <div id="PAAupdatesBannerContent">
        <span id="PAAupdatesBannerText">There are Recommended / Critical hotfixes to install. Would you like to install them now?</span>
        <span id="PAAupdatesBannerButtons">
            <button class="btn btn-secondary" style="padding-bottom: 3px; padding-top: 3px;">
                <a href="javascript: dnnsf.api.tabspro.changeTab({ mid: [PAASysUpdates:GetMIDbyModuleName(TabID="[Tab:TabID]", ModuleName="avt.TabsPro")], viewOrder: 1 }); hide(document.getElementById('PAAupdatesBanner')); show(window.parent.document.getElementsByClassName('returnto-old-ui')[0]);" style="text-decoration: none;">See Available Hotfixes</a>
            </button>
        </span>
        <span id="PAAupdatesBannerCloseButton">
            <mat-icon id="close-banner" onclick="hide(document.getElementById('PAAupdatesBanner')); show(window.parent.document.getElementsByClassName('returnto-old-ui')[0]);" class="material-icons">close</mat-icon>
        </span>
    </div>
</div>  